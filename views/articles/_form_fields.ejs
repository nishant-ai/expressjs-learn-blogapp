<div class="form-group mb-2">
    <label for="title">Title</label>
    <input value="<%= article.title %>" required class="form-control" type="text" name="title" id="title">
</div>

<div class="form-group mb-2">
    <label for="description">Description</label>
    <textarea class="form-control" name="description" id="description"><%= article.description %></textarea>
</div>

<div class="form-group mb-2">
    <label for="markdown">Markdown</label>
    <textarea class="form-control" name="markdown" id="markdown"><%= article.markdown %></textarea>
</div>

<button type="submit" class="btn btn-primary mt-3">Upload</button>
<a href="/" class="btn btn-secondary mt-3">Cancel</a>